@model CategoryViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<form method="post" asp-controller="Category" asp-action="Edit">
    <div class="border p-3 mt-4 ">

        <div class="row pb-2 ">
            <h2 class="text-primary">Update Category</h2>
            <hr />
        </div>



        <div asp-validation-summary=All></div>
        <input hidden asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreatedTime"></label>
            <input asp-for="CreatedTime" class="form-control" />
            <span asp-validation-for="CreatedTime" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info" style="width:150px">Update</button>|
        <a asp-action="Index" class="btn btn-outline-secondary">Back To List</a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}



